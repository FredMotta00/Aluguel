@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 99%;
    --foreground: 160 25% 10%;

    --card: 0 0% 100%;
    --card-foreground: 160 25% 10%;

    --popover: 0 0% 100%;
    --popover-foreground: 160 25% 10%;

    --primary: 158 64% 40%;
    --primary-foreground: 0 0% 100%;

    --secondary: 160 25% 96%;
    --secondary-foreground: 160 25% 20%;

    --muted: 160 15% 95%;
    --muted-foreground: 160 10% 45%;

    --accent: 158 50% 92%;
    --accent-foreground: 158 64% 25%;

    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 100%;

    --border: 160 15% 90%;
    --input: 160 15% 88%;
    --ring: 158 64% 40%;

    --radius: 0.625rem;

    --sidebar-background: 160 20% 98%;
    --sidebar-foreground: 160 15% 25%;
    --sidebar-primary: 158 64% 40%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 160 25% 94%;
    --sidebar-accent-foreground: 158 64% 25%;
    --sidebar-border: 160 15% 90%;
    --sidebar-ring: 158 64% 40%;

    /* Extended palette */
    --success: 158 64% 40%;
    --success-foreground: 0 0% 100%;
    --warning: 38 92% 50%;
    --warning-foreground: 38 92% 15%;
    --info: 210 100% 50%;
    --info-foreground: 0 0% 100%;

    /* Shadows */
    --shadow-xs: 0 1px 2px 0 hsl(160 15% 10% / 0.03);
    --shadow-sm: 0 1px 3px 0 hsl(160 15% 10% / 0.06), 0 1px 2px -1px hsl(160 15% 10% / 0.06);
    --shadow-md: 0 4px 6px -1px hsl(160 15% 10% / 0.07), 0 2px 4px -2px hsl(160 15% 10% / 0.07);
    --shadow-lg: 0 10px 15px -3px hsl(160 15% 10% / 0.08), 0 4px 6px -4px hsl(160 15% 10% / 0.08);
    --shadow-xl: 0 20px 25px -5px hsl(160 15% 10% / 0.08), 0 8px 10px -6px hsl(160 15% 10% / 0.08);
  }

  .dark {
    --background: 160 15% 6%;
    --foreground: 160 10% 95%;

    --card: 160 15% 9%;
    --card-foreground: 160 10% 95%;

    --popover: 160 15% 9%;
    --popover-foreground: 160 10% 95%;

    --primary: 158 55% 48%;
    --primary-foreground: 0 0% 100%;

    --secondary: 160 15% 14%;
    --secondary-foreground: 160 10% 90%;

    --muted: 160 15% 14%;
    --muted-foreground: 160 10% 55%;

    --accent: 160 20% 16%;
    --accent-foreground: 158 55% 65%;

    --destructive: 0 62% 45%;
    --destructive-foreground: 0 0% 100%;

    --border: 160 15% 16%;
    --input: 160 15% 16%;
    --ring: 158 55% 48%;

    --sidebar-background: 160 15% 8%;
    --sidebar-foreground: 160 10% 90%;
    --sidebar-primary: 158 55% 48%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 160 15% 12%;
    --sidebar-accent-foreground: 160 10% 90%;
    --sidebar-border: 160 15% 14%;
    --sidebar-ring: 158 55% 48%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    @apply bg-background text-foreground antialiased;
    font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
    font-feature-settings: 'cv11', 'ss01';
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-semibold tracking-tight;
  }
}

@layer utilities {
  .gradient-primary {
    background: linear-gradient(135deg, hsl(158 64% 40%) 0%, hsl(158 64% 32%) 100%);
  }

  .gradient-hero {
    background: linear-gradient(160deg, hsl(158 64% 42%) 0%, hsl(158 60% 35%) 50%, hsl(160 55% 28%) 100%);
  }

  .gradient-subtle {
    background: linear-gradient(180deg, hsl(0 0% 100%) 0%, hsl(160 20% 98%) 100%);
  }

  .gradient-card {
    background: linear-gradient(145deg, hsl(0 0% 100%) 0%, hsl(160 15% 99%) 100%);
  }

  .text-gradient {
    @apply bg-clip-text text-transparent;
    background-image: linear-gradient(135deg, hsl(158 64% 40%) 0%, hsl(158 50% 50%) 100%);
  }

  .glass {
    @apply bg-background/80 backdrop-blur-xl;
  }

  .glass-card {
    @apply bg-card/95 backdrop-blur-sm border border-border/50;
  }

  .shadow-glow {
    box-shadow: 0 0 40px -10px hsl(158 64% 40% / 0.3);
  }

  .shadow-glow-sm {
    box-shadow: 0 0 20px -5px hsl(158 64% 40% / 0.2);
  }

  .animate-fade-up {
    animation: fade-up 0.5s ease-out forwards;
  }

  .animate-fade-in {
    animation: fade-in 0.4s ease-out forwards;
  }

  .animate-scale-in {
    animation: scale-in 0.3s ease-out forwards;
  }

  .animate-slide-in {
    animation: slide-in 0.4s ease-out forwards;
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scale-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
}