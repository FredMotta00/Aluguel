rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Check if user is an admin by verifying existence in Firestore admins collection
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email != null && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.token.email));
    }

    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /catalogs/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default rules for other paths: Only authenticated users can read/write their own stuff?
    // For now, locking generic writes to admins as well to preventing abuse
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
